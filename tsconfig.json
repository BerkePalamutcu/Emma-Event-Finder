{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "typeRoots": ["./src/types"],
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"] //for the sake of the project this will be enough
    }
  }
}
